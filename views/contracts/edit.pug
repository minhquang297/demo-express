extend ../layouts/common
block content
    .container
    h1.display-3 Edit Contract of #{contract.clientName}
    form(action='/contracts/edit', method='POST')
        .form-group
            label(for='exampleInputStatus1') Status
            select#exampleInputStatus1.form-control(type='text', name="status")
                option Awaiting
                option Processing
                option Delivered
                option Cancel
        button.btn.btn-primary(href='/contracts/' + contract.id) Update 