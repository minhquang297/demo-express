extend ../layouts/common

block content
    .container
    h1.display-3 Create Contract
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action='/contracts/create', method='POST')
        .form-group
            label(for='exampleInputAddress1') Address
            input#exampleInputAddress1.form-control(type='text', name ="address", value= values ? values.address : "")
        .form-group
            label(for='exampleInputName1') Client name
            input#exampleInputName1.form-control(type='text', name ="clientName", value= values ? values.clientName : "")
        .form-group
            label(for='exampleInputStatus1') Status
            select#exampleInputStatus1.form-control(type='text', name="status", value= values ? values.status : "")
                option Awaiting Payment Confirmation
                option Processing
                option Delivered
                option Cancel
        button.btn.btn-primary Create