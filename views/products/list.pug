extend ../layouts/common

block content
    h1.display-3 Products List
    .d-flex.align-items-center.mb-3
        form.ml-auto(action="/products/searchToList" , method = "GET", class = "d-flex")
            input.mr-1(type="text" , name = "q" , class = "form-control")
            button.btn.btn-primary Search
    .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-3
                    img.card-img-top(src= product.image, alt='product image')
                    .card-body
                        h5.card-title #{product.name}
                        p.card-text #{product.description}
                        h1.display-4 #{product.price}$
                        a.btn.btn-primary(href='/card/add' + product.id) Add to card
