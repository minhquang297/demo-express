extend ../layouts/common

block content
    h1.display-3 Products
    .d-flex.align-items-center
        a.btn.btn-primary(href="/products/create") New Product
        form.ml-auto(action="/products/search" , method = "GET", class = "d-flex")
            input.mr-1(type="text" , name = "q" , class = "form-control")
            button.btn.btn-primary Search
    table.table.mt-3
        tr
            th Name
            th Price
            th Description
            th Actions
        each product in products  
            tr
                td= product.name
                td= product.price                
                td= product.description                
                td
                    a.btn.btn-light(href='/products/' + product.id) Detail 
    