extend ../layouts/common

block content
    .container
    h1.display-3 Create User
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action='/users/create', method='POST', enctype="multipart/form-data")
        .form-group
            label(for='exampleInputName1') Name
            input#exampleInputName1.form-control(type='text', name ="name", value= values ? values.name : "")
        .form-group
            label(for='exampleInputPhone1') Phone
            input#exampleInputPhone1.form-control(type='number', name ="phone", value= values ? values.phone : "")
        .form-group 
            label(for='avatar') Avatar
            input#avatar.form-control-file(type ='file', name ="avatar")
        button.btn.btn-primary Create

